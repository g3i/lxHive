<!DOCTYPE html>
<html class="no-js breakpoint-phone">

    <head>
        <meta charset="UTF-8">
        <title>Log in to {{ name }}</title>
        {% include 'head.twig' %}
    </head>
    <body>
        <div class="main pure-g">
            <div class="pure-u-1 pure-u-md-1-3"></div>

            <div class="pure-u-1 pure-u-md-1-3">
                <h1>
                {% if branding.enabled and branding.logo_path %}
                    <img id="custom-logo" class="pure-img" src="{{ branding.logo_path }}" alt="lxHive" title="">
                {% else %}
                    <img id="lxhive-logo" class="pure-img" src="/assets/images/lxHive.logo.png" alt="lxHive" title="">
                {% endif %}
                </h1>

                {% if service.errors %}
                <ul class="alert alert-error">
                {% for error in service.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
                </ul>
                {% endif %}

                <form class="pure-form pure-form-stacked" action="" method="POST">
                    <fieldset>
                        <h2> Log in to {{ name }}</h2>
                        {% if branding.enabled and branding.header %}
                            {{ branding.header }}
                        {% endif %}
                        <input type="hidden" name="csrfToken" value="{{ csrfToken }}"/>
                        <div class="pure-control-group">
                            <input id="id_username" autocorrect="off" autocapitalize="off" type="text" placeholder="Email" name="email" maxlength="254" />
                        </div>
                        <div class="pure-control-group">
                                <input type="password" placeholder="Password" name="password" id="id_password"/>
                        </div>
                        <div class="pure-control-group">
                            <label for="id_remember_me" class="pure-checkbox">
                                <input type="checkbox" name="rememberMe" id="id_remember_me" />Remember me</label>
                            </label>
                            <button type="submit" class="pure-button pure-button-primary button-xlarge">Log In</button>
                        </div>
                    </fieldset>
                </form>

            </div>

            <div class="pure-u-1 pure-u-1-3"></div>
        </div>
        {% include 'footer.twig' %}
    </body>
</html>
